package com.code.mahi;
import java.util.Scanner;
import java.util.regex.Pattern; 
 
public class Email 
{ 
	
    public static boolean isValid(String email) 
    { 
    	
    	
        String emailRegex = "^[a-zA-Z0-9_+&*-]+(?:\\.[a-zA-Z0-9_+&*-]+)*@" +  
                "(?:[a-zA-Z0-9-]+\\.)+[a-zA-Z]{2,7}$"; 
        
        Pattern pat = Pattern.compile(emailRegex); 
        if (email == null) 
            return false; 
        return pat.matcher(email).matches(); 
    } 
 
    
    public static void main(String[] args) 
    { 
    	
    	String email4;
    	Scanner r=new Scanner(System.in);
    	email4=r.nextLine();
    	System.out.println("Please enter Email to veriry; ");
    	String email1 = "simplilearn@33gmail.com";
        String email2 = "mahesh.com@yahoo";
        String email3 = "mahesh.simplilearn33@gmail.com";
        String[] emails= {email1,email2,email3,};
        
 
        for (int i = 0; i < emails.length; i++) {
            String email=emails[i];
            if (isValid(email)) 
                System.out.print(email+" is valid email"); 
            else
                System.out.print(email+" is invalid email"); 
 
            System.out.println();
        }
    } 
} 
